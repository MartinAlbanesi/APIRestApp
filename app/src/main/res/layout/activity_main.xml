<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <TextView
        android:id="@+id/tv_beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer_name"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/img_beer"
        app:layout_constraintEnd_toStartOf="@id/tv_beer_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_beer"
        android:layout_width="396dp"
        android:layout_height="440dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@id/tv_beer_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/beer_img_desc" />

    <TextView
        android:id="@+id/tv_beer_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/beer_description"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_beer"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_beer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer_id"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/img_beer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_beer_name"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>